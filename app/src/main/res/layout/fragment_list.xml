<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ListFragment">

    <ListView
        android:id="@+id/cat_listView"
        android:layout_width="327dp"
        android:layout_height="238dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/imageViewPushin"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPushin"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewPushin"
        android:layout_width="185dp"
        android:layout_height="173dp"
        android:src="@drawable/pushin2"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />

    <ImageView
        android:id="@+id/imageViewTextPushin"
        android:layout_width="182dp"
        android:layout_height="171dp"
        android:src="@drawable/text"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPushin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toEndOf="@+id/imageViewPushin"
        app:layout_constraintTop_toTopOf="@+id/imageViewPushin"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onClick"
        android:background="#FDD1E1"
        android:text="Тест"
        app:layout_constraintEnd_toEndOf="@+id/cat_listView"
        app:layout_constraintStart_toStartOf="@+id/cat_listView"
        app:layout_constraintTop_toBottomOf="@+id/cat_listView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="246dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:text="@string/test1"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="85dp"
        android:layout_height="68dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/pushin6"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="@+id/cat_listView"
        app:layout_constraintTop_toBottomOf="@+id/cat_listView" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="82dp"
        android:layout_height="78dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/pushin8"
        app:layout_constraintEnd_toEndOf="@+id/cat_listView"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/cat_listView" />


</androidx.constraintlayout.widget.ConstraintLayout>